map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map i recolor
map p print
map g goto top
map <C-Tab> toggle_statusbar

# GENERAL SETTINGS
# ----------------
set window-title-basename true
set statusbar-home-tilde  true
#set recolor               true
set selection-clipboard   clipboard

# LAYOUT SETTINGS
# ---------------
set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding        1

# MODUS OPERANDI THEME
# --------------------
set default-bg              "#ffffff"  # PDF background (white)
set statusbar-bg            "#f0f0f0"  # Status bar background (light gray)
set default-fg              "#000000"  # Text color (dark gray)
set statusbar-fg            "#000000"  # Status bar text color (dark gray)
set inputbar-bg             "#f0f0f0"  # Input bar background (light gray)
set inputbar-fg             "#000000"  # Input bar text color (dark gray)
set completion-bg           "#ffffff"  # Completion menu background (white)
set completion-fg           "#000000"  # Completion menu text color (dark gray)
set completion-group-bg     "#ffffff"  # Completion group background (white)
set completion-group-fg     "#000000"  # Completion group text color (dark gray)
set completion-highlight-bg "#e0e0e0"  # Highlighted completion background (light gray)
set completion-highlight-fg "#000000"  # Highlighted completion text color (dark gray)
set notification-bg         "#ffffff"  # Notification background (white)
set notification-fg         "#000000"  # Notification text color (dark gray)
set notification-error-bg   "#ff5c57"  # Error notification background (light red)
set notification-error-fg   "#ffffff"  # Error notification text color (white)
set notification-warning-bg "#ffbd2e"  # Warning notification background (light yellow)
set notification-warning-fg "#000000"  # Warning notification text color (dark gray)
set highlight-color         "#ff80bf"  # Highlight color (light pink)
set highlight-active-color  "#ff64b0"  # Active highlight color (darker pink)
set index-bg                "#ffffff"  # Index background (white)
set index-fg                "#000000"  # Index text color (dark gray)
set index-active-bg         "#e0e0e0"  # Active index background (light gray)
set index-active-fg         "#000000"  # Active index text color (dark gray)
set recolor-darkcolor       "#000000"  # Dark recolor for backgrounds (dark gray)
set recolor-lightcolor      "#ffffff"  # Light recolor for text (white)
set render-loading-bg       "#ffffff"  # Loading background (white)
set render-loading-fg       "#000000"  # Loading text color (dark gray)
